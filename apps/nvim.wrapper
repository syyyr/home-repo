#!/bin/bash
HOURS=$(date +%H)
if [ $HOURS -lt ${DAYSTART:-8} ] || [ $HOURS -ge ${NIGHTSTART:-22} ]; then
    OPACITY=97
else
    OPACITY=95
fi
TERMPID=$(pstree -p | grep $$ | grep -oP '(?<=terminator\()[[:digit:]]+')
sed -i "s/background_darkness.*$/background_darkness = 0.${OPACITY}/" ~/.config/terminator/config
kill -USR1 $TERMPID
/usr/bin/nvim -p "$@"
TORETURN=$?
sed -i 's/background_darkness.*$/background_darkness = 0.9/' ~/.config/terminator/config
kill -USR1 $TERMPID

exit $TORETURN
