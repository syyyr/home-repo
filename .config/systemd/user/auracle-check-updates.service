ExecStart=/usr/bin/bash -c 'if /usr/bin/auracle outdated; then notify-send -i '/home/vk/.local/share/icons/blue/25-Ampoule.png' Auracle "AUR updates available.";     ffplay ~/.local/share/notification.mp3 -nodisp -autoexit; fi'
