    format = '{status} [\?color=white {percent}%]'
    format_status_charging = "âš¡"
    format_status_discharging = "ðŸ”‹"
    format_status_degraded = "ðŸ”‹"
    format_status_full = "ðŸ’¯"
    threshold_full = 100
    last_full_capacity = true
}

clock {
    format = ["{Europe/Prague}"]
    format_time = "%A %d.%m.%Y %H:%M"
}

