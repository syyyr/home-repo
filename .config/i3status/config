order += "battery_level 0"
order += "clock"

google_calendar {
    time_to_max = 99999
    events_within_hours = 48
    markup = "pango"
    format_event = "[\?if=!is_current [\?color=lime {summary}][ {format_timer}]]"
    format_timer = "\?color=time (in [\?if=days {days}d ][\?if=hours {hours}h ][\?if=minutes {minutes}m])"
}

online_status {
    icon_on = ''
    icon_off = 'No internet connection'
    format = "[\?color=dimgrey {icon}]"
}

bluetooth {
    format = "BT: {format_device}|BT: down"
    color_good = deepskyblue
    color_bad = dimgrey
    on_click 1 = 'exec bluetoothctl disconnect && py3-cmd refresh bluetooth'
}

keyboard_locks {
    cache_timeout = 10
    format = '[\?if=caps_lock&color=good CAPS][\?if=num_lock&color=good |\?color=bad  NUM]'
}

volume_status {
    format = "â™ª: {percentage}%"
    format_muted = "â™ª: muted ({percentage}%)"
    color = white
    color_good = white
    color_degraded = white
    color_muted = yellow
    color_bad = white
}

networkmanager {
    format = "[\?color=lime {format_device}]"
    format_device = "[\?if=general_connection [\?if=general_type=ethernet E: ][\?if=general_type=wifi W: {ap_ssid} (]{ip4_address1}[\?if=general_type=wifi )]]"
}

diskdata {
    format = "[\?color=free {free}]"
    format_space = "{value:.1f} GB"
    thresholds = {
        'free': [(0, 'worst'), (0.3, 'worse'), (0.5, 'better'), (1, 'best')]
    }
    color_best = '#00FF00'
    color_better = '#FFFF00'
    color_worse = '#FF4500'
    color_worst = '#AA0000'
}

