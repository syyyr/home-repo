        format = "%status %percentage"
        status_chr = "âš¡"
        status_bat = "ğŸ”‹"
        status_unk = "â“"
        status_full = "ğŸ’¯"
        last_full_capacity = true
        integer_battery_capacity = true
        threshold_type = precentage
}

battery 1 {
        format = "%status %percentage"
        status_chr = "âš¡"
        status_bat = "ğŸ”‹"
        status_unk = "â“"
        status_full = "ğŸ’¯"
        last_full_capacity = true
        integer_battery_capacity = true
        threshold_type = precentage
}

tztime local {
        format = "%A %d.%m.%Y %H:%M"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}

lm_sensors {
        chips = ['coretemp-isa-0000']
        sensors = ['package_id_0']
        format_sensor = '[\?if=input<40 â„|[\?if=input<70 ğŸŒ¡ï¸|ğŸ”¥]]  \?color=input {input}'
        format_chip = '{format_sensor}Â°C'
